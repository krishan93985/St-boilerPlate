<div id="initialRes">
    {{#each details.space}}
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2 col-xl-4 imageDiv">
                <img src="{{this.images.imageList.[0]}}" id="card-photo">
            </div>
            <div class="col-sm-10 col-md-10 col-lg-10 col-xl-8" id="content">
                <div class="row">
                    <div class="col-md-6">
                        <h5><b>{{this.spaceName}}</b></h5>
                        {{this.ward}}
                    </div>
                    <div class="col-lg-6">
                        {{#each this.tags}}
                            <span class="badge badge-info">{{this}}</span>
                        {{/each}}
                    </div>
                </div><br>
                <div class="row">
                    <div class="col-12"><b>Citation:</b> {{this.images.metaData.[0]}}</div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-12 col-md-12 col-lg-5 d-flex align-items-center justify-content-start justify-content-md-start justify-content-lg-start" id=""><span><b>Published on:</b> {{this.publishedOn}}</span></div>
                    <div class="col-sm-3 col-12 col-md-12 col-lg-6 d-flex align-items-center justify-content-start justify-content-md-end justify-content-lg-end mt-3 mt-md-0">
                        <form action="/center/{{this._id}}" method="get">
                            <button type="submit" formtarget="_blank" class="btn btn-primary view-details" id="{{this._id}}">View
                                Details</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br/><br/>
    {{/each}}
</div>

<div id="filterRes" style="display: none">

</div>

